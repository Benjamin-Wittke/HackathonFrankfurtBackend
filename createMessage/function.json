{
  "disabled" : false,
  "bindings": [
    {
      "authLevel": "anonymous",
      "route" : "messages",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "name": "hackathonfrankfurtbbsql",
      "type": "cosmosDB",
      "databaseName": "chat",
      "collectionName": "messages",
      "createIfNotExists": true,
      "connectionStringSetting": "CosmosDBConnectionString",
      "direction": "out"
    },

    {
      "type": "signalR",
      "name": "signalRMessages",
      "hubName": "chat",
      "direction": "out"
    }
  ]
}